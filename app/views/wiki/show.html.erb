<% content_for :body_content_title do %>
  <%= @refinerycms_wiki.title %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Title</h3>
    <%= @refinerycms_wiki.title %>
  </div>
  
  <div>
    <h3>Body</h3>
    <%= @refinerycms_wiki.body %>
  </div>
  
  <div>
    <h3>Category</h3>
    <%= @refinerycms_wiki.category_id %>
  </div>
  
  <div>
    <h3>Version</h3>
    <%= @refinerycms_wiki.version %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="refinerycms_wikis">
    <% @refinerycms_wikis.each do |refinerycms_wiki| %>
      <li>
        <%= link_to refinerycms_wiki.title, refinerycms_wiki_url(refinerycms_wiki) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
